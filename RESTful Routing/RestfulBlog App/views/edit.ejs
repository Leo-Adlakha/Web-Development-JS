<% include ./partials/header %>

<div class="ui main text container segment">
	<div class="ui huge header">Edit Blog</div>
	<form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="blogs[title]" placeholder="Title" required value="<%= blog.title %>">
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="blogs[image]" placeholder="Image URL" required value="<%= blog.image %>">
		</div>
		<div class="field">
			<label>Your Blog Content</label>
			<textarea name="blogs[body]" required><%= blog.body %></textarea>
		</div>
		<input type="submit" value="Update" class="ui red button big inverted">
	</form>
</div>

<% include ./partials/footer %>